<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kahvaltim.MainActivity"
    android:background="@android:color/background_light"
    android:gravity="top">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="418dp">

        <TextView
            android:text="Toplam Tutar"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/textView2"
            android:textSize="24sp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/holo_orange_dark" />

        <TextView
            android:text="0,00 TL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textViewtoplamtutar"
            android:layout_weight="1"
            android:textSize="24sp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/holo_green_dark" />

        <ImageButton
            app:srcCompat="@drawable/sepet"
            android:id="@+id/imageButton2"
            android:adjustViewBounds="false"
            android:scaleType="fitXY"
            android:background="@drawable/sepet"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="siparisclick" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/kahvaltiliste"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="64dp" />

</RelativeLayout>
